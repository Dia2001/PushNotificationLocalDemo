<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PushNotificationLocalDemo.MainPage">
    <StackLayout Padding="10">
        <Label Text="Tên thuốc:" />
        <Entry x:Name="medicationNameEntry" Placeholder="Nhập tên thuốc" />

        <Label Text="Thời gian nhắc nhở:" />
        <TimePicker x:Name="reminderTimePicker" />

        <Button Text="Thêm nhắc nhở" Clicked="OnAddReminderClicked" />
    </StackLayout>
</ContentPage>
